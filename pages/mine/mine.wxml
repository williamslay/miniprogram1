<!-- 用户信息卡片 -->
<view class="cardHeader"></view>
<view class="i-card">
    <view class="i-card-header">
        <view class="i-card-header-content">
            <view class="i-card-header-avatar">
            <image src="{{userInfo.avatarUrl}}" mode="heightFix" wx:if="{{userInfo.avatarUrl}}"/>
            <image wx:else src="../../images/user.png" mode="heightFix" />
             </view>
             <view  class="i-card-header-nickname">{{userInfo.nickName}}</view>
        </view>
        <view class="i-card-header-extra" wx:if="{{ extra }}">{{ extra }}</view>
    </view>
    <view class="i-card-body"><slot name="content"></slot></view>
    <view class="i-card-footer"><slot name="footer"></slot></view>
</view>
