.c-image-view {
  width: 100%;
  display: inline-flex;
  flex-flow: column;
  background: white;
  border-radius: 10px;
  overflow: hidden;
  height: 100%;
}

.c-image-view .waterfall-load-node {
  width: 100%;
  height: 50%;
  display: inline-flex;
  flex-grow: 1;
  background: gainsboro;
  transition: opacity 0.3s;
  opacity: 0;
  overflow: hidden;
  visibility: hidden;
}

.c-image-view .waterfall-load-node .load-image {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.c-image-view .waterfall-load-other {
  font-size: 30rpx;
  background: white;
  min-height: 60rpx;
  padding: 10px;
  display: flex;
  align-items: center;
}
