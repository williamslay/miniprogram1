:root {
  --icon-size: 80rpx;

  --bgColor: inherit;
  --sepColor: #e0e0e0;
  --divColor: #444444;
}

.search-container {
  margin: 0;
  padding: 30rpx 40rpx 0 40rpx;
}

.search-icon {
  width: var(--icon-size);
  height: var(--icon-size);
  border-radius: 50%;
}

.search-bar {
  width: 100%;
  margin: 0 0 20rpx 0;
  border-bottom: 1rpx var(--divColor);
}

.search-recommend {
  height: 30vh;
  width: 100%;
  overflow: hidden;
}

.search-discover {
  bottom: 0;
  overflow: auto;
  height: 30vh;
  max-height: 300rpx;
}

.search-result {
  height: 85vh;
  max-height: 1000rpx;
  overflow: auto;

}

.box {
  display: block;
  margin: 0;
  padding: 0;
  border: 1rpx 0 var(--sepColor);
  width: 100%;
  height: 4em;
  background-color: var(--bgColor);
}

.box .left {
  margin: 0;
  padding: 5rpx;
  width: 4em;
 display: block;
}

.box .img {
  height: 100%;
  width: 100%;
}

.box .right {
  margin: 0;
  padding: 5rpx 5rpx 5rpx 0;
  display: block;
}

.box .title {
  font-size: 1.2em;
  height: 1.4em;
  overflow: hidden;
}

.box .divider {
  background-color: var(--divColor);
  width: 100%;
  height: 1%;
}

.box .excerpt {
  font-size: 1ex;
  overflow: hidden;
}