.cardHeader{
  position: absolute;
  height:20%;
  width: 100%;
  background-color:#ffd662;
}
.i-card{
  position: relative;
  height:300rpx;
}

.i-card-header-avatar{
  border-radius:20%;
  height:120rpx;
  width: 120rpx;
  display:inline-block;
  position: relative;
  left:50rpx;
  background-color: #fff;
}

.i-card-header-avatar image{
  border-radius:20%;
  height:100%;
}
.i-card-header-nickname{
  display:inline-block;
  height:60rpx;
  width: 120rpx;
  position: relative;
  left:65rpx;
  bottom: 70rpx;
  vertical-align:middle;
  font-size:20px;
  color:black;
}
.i-card-header-extra{
  flex:1;
  text-align:right;
  font-size:14px;
  color:#80848f
}
.i-card-body{
  position:relative;
  padding:6px 16px;
  color:#495060;
  font-size:14px
}
.i-card-footer{
  position:relative;
  padding:6px 16px;
  color:#80848f;
  font-size:12px
}