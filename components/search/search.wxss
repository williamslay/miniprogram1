.search-container {
  margin: 30rpx 40rpx 0 40rpx;
  padding: 0;
}

.search-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.search-bar {
  height: 2em;
  width: 100%;
  margin: 1em 0;
  padding: 1ex 0;
  border-radius: 1em;
  background-color: #eee;
  display: table;
}

.input {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
  width: 80%;
}

.search-cate {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  margin: 0 0 1em 0;
}

.search-history {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  margin: 0 0 1em 0;
}

.capsule {
  padding: 0 1ex;
  margin: 0.3ex 0.2ex;
  border-radius: 1em;
  background-color: #ccc;
}

.search-recommend {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-content: flex-start;
}

.search-discover {
  width: 100%;
  display: flex;
  flex-flow: row-reverse wrap-reverse;
  justify-content: space-between;
  align-content: flex-end;
}

.water {
  width: 44%;
  height: 3em;
  margin: 0.5ex 0;
  padding: 1ex;
  background-color: #ffe;
  border-radius: 1ex;
  display: flex;
  flex-direction: row;
}

.water .left {
  width: 4em;
}

.water .right {
  width: 100%;
  height: 100%;
  display: table;
  padding: 0 0 0 1ex;
}

.water .right .inner {
  display: table-cell;
  vertical-align: middle;
  height: 1.1em;
  overflow: hidden;
}

.search-result {
  max-height: 1000rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column-reverse;
}

.box {
  display: flex;
  flex-direction: row;
  margin: 0.5ex 0;
  padding: 0;
  width: 100%;
  height: 5em;
  background-color: #ffe;
  border-radius: 1ex;
}

.box .left {
  margin: 0;
  padding: 1ex;
  width: 5em;
}

.img {
  height: 100%;
  width: 100%;
  border-radius: 5%;
}

.box .right {
  margin: 0;
  padding: 1ex;
  width: 100%;
}

.box .title {
  font-size: 1.2em;
  height: 1.4em;
  max-width: 75%;
  overflow: hidden;
}

.box .divider {
  background-color: #444;
  width: 80%;
  height: 0.1ex;
}

.box .excerpt {
  font-size: 1ex;
  overflow: hidden;
}

.no {
  display: table;
  text-align: center;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 30vh;
  background-color: #ffe;
  border-radius: 1ex;
}

.no .inner {
  display: table-cell;
  vertical-align: middle;
  font-size: 1.4em;
}