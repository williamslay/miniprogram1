<page-container show="{{showSearch}}" overlay="{{false}}" round="{{true}}" close-on-slideDown="{{true}}" bind:leave="exit">
  <view class="search-container">

    <view class="search-result" wx:if="{{showResult}}">
      <waterfall generic:selectable="image-view" views="{{ results }}" options="{{ options }}"></waterfall>
    </view>

    <view class="result-title" wx:if="{{showNo}}">
      <text>未找到您搜索的内容</text>
    </view>

    <swiper class="search-discover" wx:if="{{showDiscover}}">
      <swiper-item class="discover-content">
        
      </swiper-item>
    </swiper>

    <view class="search-bar" wx:if="{{showBar}}">
      <input placeholder="Search..." bindfocus="searchDiscover" bindinput="searchNow"></input>
    </view>

    <swiper class="search-recommend" wx:if="{{showRecommend}}">
      <swiper-item class="recommend-content">
        <navigator wx:for="{{recommend}}" url='{{"/pages/post/post?id=" + item.id}}'>
          <view class="left">
            <image src="{{item.img}}"></image>
          </view>
          <view class="right">
            <text class="title">{{item.title}}</text>
            <text class="excerpt">{{item.excerpt}}</text>
          </view>
        </navigator>
      </swiper-item>
    </swiper>

  </view>
</page-container>

<view class="search-icon" onclick="expand" wx:if="{{showIcon}}">
  <image width="100%" height="100%" src="" />
</view>