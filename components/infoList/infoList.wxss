:root {
  --bgColor: inherit;
  --sepColor: #e0e0e0;
  --divColor: #444444;
}

.box {
  display:block;
  margin: 0;
  padding: 0;
  border: 1% 0 var(--sepColor);
  width: 100%;
  height: 4em;
  background-color: var(--bgColor);
}

.left {
  margin: 0;
  padding: 10%;
  width: 4em;
  display: flex;
}

.img {
  height: 100%;
  width: 100%;
}

.right {
  margin: 0;
  padding: 10% 20% 10% 10%;
}

.title {
  font-size: 1.2em;
  height: 1.4em;
  overflow: hidden;
}

.divider {
  background-color: var(--divColor);
  width: 100%;
  height: 1%;
}

.excerpt {
  font-size: 1ex;
  overflow: hidden;
}