<page-container overlay="{{false}}" round="{{true}}" close-on-slideDown="{{false}}" show="{{showSearch}}"
  bind:clickoverlay="exit" bind:leave="exit">
  <view class="search-container">

    <view class="search-result" wx:if="{{showResult}}">
      <navigator wx:for="{{results}}" url="{{item.url}}" class="box">
        <view class="left">
          <image wx:if="{{item.img != null}}" class="img" mode="aspectFill" src="{{item.img}}"></image>
        </view>
        <view class="right">
          <view class="title"><text>{{item.title}}</text></view>
          <view class="divider"></view>
          <view class="excerpt"><text>{{item.excerpt}}</text></view>
        </view>
      </navigator>
    </view>

    <view class="result-title" wx:if="{{showNo}}">
      <text>未找到您搜索的内容</text>
    </view>

    <view class="search-discover" wx:if="{{showDiscover}}">
      <navigator wx:for="{{discover}}" url="{{item.url}}" class="box-small">
          <view class="title"><text>{{item.title}}</text></view>
          <view class="divider"></view>
          <view class="excerpt"><text>{{item.excerpt}}</text></view>
      </navigator>
    </view>

    <view class="search-bar" wx:if="{{showBar}}">
      <input placeholder="Search..." bindfocus="searchStart" bindinput="searchDiscover"></input>
    </view>

    <view class="search-recommend" wx:if="{{showRecommend}}">
      <navigator wx:for="{{recommend}}" url="{{item.url}}" class="box">
        <view class="left">
          <image wx:if="{{item.img != null}}" class="img" mode="aspectFill" src="{{item.img}}"></image>
        </view>
        <view class="right">
          <view class="title"><text>{{item.title}}</text></view>
          <view class="divider"></view>
          <view class="excerpt"><text>{{item.excerpt}}</text></view>
        </view>
      </navigator>
    </view>

  </view>
</page-container>

<view class="search-icon" onclick="expand" wx:if="{{showIcon}}">
  <image width="100%" height="100%" src="" />
</view>