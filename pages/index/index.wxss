/* 验证登录页样式 */
.login-box{
  margin:0 0 80rpx 0;
}
.logo {
    margin:0 0 40rpx 0;
    padding: 80rpx 0 40rpx 0;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
  }
.logo image {
    width:50%;
  }

rich-text{
  width:100%;
}

.txt {
    width:100%;
    font-size:1rem;
    line-height:1.4em;
    text-align:justify;
    margin:40rpx 40rpx;
  }
.txt .title{
    font-size:2em;
    text-align:center;
    color: #444444;
    margin: 0.5em 0 0.5em 0;
  }
.txt .normal {
    color: #000000;
  }

.button {
  margin:40rpx auto;
  border-radius: 80rpx;
  width:60%;
  font-size: 35rpx;
}

/* 功能栏样式 */
  .Menu {
    margin-top: 30rpx; 
    height: 300rpx;
  }
  .Menu .item{
    width: 20%;
    height: 108rpx;
  }
  .Menu_item{
    display: flex;
    flex-wrap: wrap;
    height: 216rpx;
    text-align: center;
    font-size: 28rpx;
  
  }
  .Menu .item image{
    display:block;
    width: 80rpx;
    height: 80rpx;
    margin:auto;
  }
